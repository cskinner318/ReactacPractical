@page
@model Reactec.Web.Models.WebUser
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div asp-validation-summary="ModelOnly"></div>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">User Details</th>
            </tr>
            <tr>
                <td>Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.Name)
                </td>
            </tr>
            <tr>
                <td>Email Address: <span style="color: red">@Html.ValidationMessageFor(m => m.EmailAddress)</span></td>
                <td>
                    @Html.TextBoxFor(m => m.EmailAddress)
                </td>
            </tr>
            <tr>
                <td>Date of birth: <span style="color: red">@Html.ValidationMessageFor(m => m.DateOfBirth)</span></td>
                <td>
                    @Html.EditorFor(m => m.DateOfBirth)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</body>
</html>